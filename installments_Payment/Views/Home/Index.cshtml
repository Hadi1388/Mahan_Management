@{
    ViewData["Title"] = "صفحه نخست - مرکز درمانی ماهان";
}

<section class="hero-section py-10 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-cyan-50 to-green-50 opacity-50"></div>
    <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center">
            <div>
                <h3 class="hero-title text-4xl font-bold text-gray-800 mb-4 leading-tight text-center md:text-right">
                    💊 سلامتی شما،
                    <span class="text-transparent bg-clip-text medical-gradient">اولویت ماست</span>
                </h3>
                <br />
                <p class="text-lg md:text-xl text-gray-600 mb-6 md:mb-8 leading-relaxed text-center md:text-right mx-2">
                    ✅ ثبت در خواست آنلاین در کمتر از 10 دقیقه
                    <br>
                </p>

                <div class="flex flex-wrap gap-4 mb-8 justify-center md:justify-start">
                    <button class="medical-gradient text-white px-8 py-4 rounded-full font-semibold text-lg hover:shadow-xl transition-all hover-scale">
                        <i class="fas fa-pills ml-2"></i>ثبت درخواست
                    </button>
                    <button class="border-2 border-cyan-500 text-cyan-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-cyan-50 transition-all hover-scale">
                        <i class="fas fa-upload ml-2"></i>درباره ما
                    </button>
                </div>
            </div>

            <!-- Hero Image/Illustration -->
            <div class="relative">
                <div class="floating glass-card rounded-3xl p-8 text-center">
                    <div class="text-8xl mb-6">🏥</div>
                    <h3 class="text-2xl font-bold text-gray-800 mb-4">خدمات آنلاین 24 ساعته</h3>
                    <div class="grid grid-cols-2 gap-4 text-center">
                        <div class="bg-green-50 p-4 rounded-xl">
                            <div class="text-2xl mb-2">⏰</div>
                            <div class="text-sm font-semibold text-green-700">درخواست سریع</div>
                        </div>
                        <div class="bg-blue-50 p-4 rounded-xl">
                            <div class="text-2xl mb-2">💊</div>
                            <div class="text-sm font-semibold text-blue-700">تضمین پشتیبانی</div>
                        </div>
                        <div class="bg-purple-50 p-4 rounded-xl">
                            <div class="text-2xl mb-2">👨‍⚕️</div>
                            <div class="text-sm font-semibold text-purple-700">درخواست آنلاین</div>
                        </div>
                        <div class="bg-red-50 p-4 rounded-xl">
                            <div class="text-2xl mb-2">🚨</div>
                            <div class="text-sm font-semibold text-red-700">درخواست فوری</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

