@using installments_Payment.Core.ViewModels
@using installments_Payment.Core.ViewModels.Patient
@model PatientProfileViewModel

@{
    ViewData["Title"] = "داشبورد";

    bool isInfoIncomplete = string.IsNullOrWhiteSpace(Model.SecondaryPhoneNumber) ||
                            string.IsNullOrWhiteSpace(Model.NationalCode) ||
                            string.IsNullOrWhiteSpace(Model.Address) ||
                            string.IsNullOrWhiteSpace(Model.NationalCardImagePath);

    var successMessage = TempData["SuccessMessage"] as string;

}


<div class="container">
    <div class="card shadow-sm">
        <div class="card-header">
            <h2 class="text-2xl font-bold">پروفایل کاربری</h2>
        </div>
        <div class="card-body">
            @* هشدار شماره تلفن تایید نشده *@
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                    @successMessage
                </div>
            }

            @if (!Model.IsPhoneVerified)
            {
                <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">توجه!</strong>
                    <span class="block sm:inline">شماره تلفن شما تایید نشده است. لطفاً ابتدا شماره تلفن خود را تایید کنید.</span>
                    <a class="text-primary font-semibold" href="#">تایید شماره تلفن</a>
                </div>
            }

            @* هشدار اطلاعات تکمیل نشده *@
            @if (string.IsNullOrWhiteSpace(Model.SecondaryPhoneNumber)
            || string.IsNullOrWhiteSpace(Model.NationalCode)
            || string.IsNullOrWhiteSpace(Model.Address)
            || string.IsNullOrWhiteSpace(Model.NationalCardImagePath))
            {
                <div class="alert alert-danger font-semibold d-flex justify-content-between align-items-center mb-4">
                    ثبت درخواست برای شما ممکن نیست؛ لطفاً پروفایل خود را کامل کنید.
                    <a class="btn-gradient-green text-white font-bold py-2 px-4 rounded" href="CompleteInfo">تکمیل اطلاعات</a>
                </div>
            }

            @* هشدار موفقیت ثبت درخواست *@
            @if (Model.IsPhoneVerified
            && !string.IsNullOrWhiteSpace(Model.SecondaryPhoneNumber)
            && !string.IsNullOrWhiteSpace(Model.NationalCode)
            && !string.IsNullOrWhiteSpace(Model.Address)
            && !string.IsNullOrWhiteSpace(Model.NationalCardImagePath))
            {
                <p class="alert alert-success font-semibold">
                    حساب شما مشکلی برای ثبت درخواست ندارد
                </p>
            }

            <hr />

            <div class="mb-4 mt-3">
                <p class=""><strong>نام و نام خانوادگی:</strong> @Model.FullName</p>
                <br />
                <p><strong>شماره تلفن:</strong> @Model.PrimaryPhoneNumber</p>
                @if (!Model.DisableRequestButton)
                {
                    <br />
                    <p class="text-success"><strong>برای مشاهده اطلاعات کامل خود میتوانید به بخش اطلاعات کاربری مراجعه کنید</strong></p>
                }
            </div>
            <hr class="mb-2" />
            <div class="d-flex justify-content-end">
                @if (!Model.DisableRequestButton)
                {
                    <form asp-action="SubmitRequest" method="post" class="d-inline">
                        <button type="submit" class="btn btn-gradient-green text-white font-bold py-2 px-4 rounded">
                            ثبت درخواست
                        </button>
                    </form>
                }
                else
                {
                    <a class="btn btn-gradient-gray text-white font-bold py-2 px-4 rounded disabled">
                        ثبت درخواست
                    </a>
                }
            </div>
        </div>
    </div>
</div>

