@model installments_Payment.DataAccessLayer.Entities.Users.Assistant

@{
    ViewData["Title"] = "پروفایل دستیار";
}

<div class="container">
    <div class="card shadow-sm border-0 mx-auto h-100 w-100" style="border-radius: 20px; overflow: hidden;">
        <div class="bg-gradient-to-rr from-green-primary to-green-dark text-white text-center p-4">
            <img src="@(string.IsNullOrEmpty(Model.ProfileImage) ? "/img/assistant-profile/default.png" : Model.ProfileImage)"
                 alt="Profile Image" class="img-thumbnail rounded-circle border-3 mx-auto" style="width:150px; height:150px; object-fit:cover; border-color: white;" />
            <h3 class="mt-3">@Model.FullName</h3>
        </div>

        <div class="p-4 text-center">
            <p class="text-muted mb-2"><strong>شماره تلفن:</strong> @Model.PhoneNumber</p>
            @if (!string.IsNullOrEmpty(Model.Address))
            {
                <p class="text-muted mb-2 text-truncate" style="max-width: 100%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    <strong>آدرس:</strong> @Model.Address
                </p>
            }
            <a href="tel:@Model.PhoneNumber" class="btn btn-gradient-green text-white mt-3 px-4 py-2">
                داشبور دستیار
            </a>
        </div>
    </div>
</div>

<style>
    .bg-gradient-to-rr {
        background: linear-gradient(90deg, #43a047 0%, #66bb6a 50%, #81c784 100%);
    }

    @@media (max-width: 576px) {
        .card img

    {
        width: 120px !important;
        height: 120px !important;
    }

    }
</style>
