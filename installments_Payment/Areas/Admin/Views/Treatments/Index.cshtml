@model IEnumerable<installments_Payment.DataAccessLayer.Entities.Treatments.Treatment>

@{
    ViewData["Title"] = "لیست نام درمان ها";
}

<p>
    <a asp-action="Create" class="bg-gradient-to-r from-green-primary to-green-dark text-white px-4 py-2 rounded-full font-medium hover:opacity-90 transitionn">نام درمان جدید</a>
</p>

<hr class="mt-3" />

@if (Model.Any())
{
    <div class="card mt-2">
        <div class="card-body">
            <table class="table table-bordered table-striped shadow">
                <thead class="table-success">
                    <tr class="text-center">
                        <th>
                            @Html.DisplayNameFor(model => model.TreatmentName)
                        </th>
                        <th>
                            عملیات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>
                                @Html.DisplayFor(modelItem => item.TreatmentName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.TreatmentId" class="text-warning">ویرایش</a> |
                                <a asp-action="Details" asp-route-id="@item.TreatmentId" class="text-primary">جزئیات</a> |
                                <a asp-action="Delete" asp-route-id="@item.TreatmentId" class="text-danger">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

else
{
    <div class="alert btn-gradient-yellow text-center text-black-50 rounded-2 mt-3">
        نام درمانی برای نمایش وجود ندارد
    </div>
}

