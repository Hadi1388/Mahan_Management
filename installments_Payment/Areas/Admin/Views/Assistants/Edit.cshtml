@model installments_Payment.DataAccessLayer.Entities.Users.Assistant

@{
    ViewData["Title"] = "ویرایش دستیار";
}

<div class="container">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    نام و نام خانوادگی
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    کد ملی
                    <input asp-for="NationalCode" class="form-control" />
                    <span asp-validation-for="NationalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    شماره تلفن
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    تصویر پروفایل
                    <input type="file" name="ProfileImageFile" id="ProfileImageFile" class="form-control" />
                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                    {
                        <img id="imgPreview" src="@Model.ProfileImage" class="img-thumbnail mt-2" style="max-width:150px;" />
                    }
                    else
                    {
                        <img id="imgPreview" class="img-thumbnail mt-2" style="max-width:150px; display:none;" />
                    }
                </div>

                @section Scripts {
                    <script>
                        document.getElementById('ProfileImageFile').addEventListener('change', function (e) {
                            const [file] = e.target.files;
                            if (file) {
                                const imgPreview = document.getElementById('imgPreview');
                                imgPreview.style.display = 'block';
                                imgPreview.src = URL.createObjectURL(file);
                            }
                        });
                    </script>
                }

                <div class="form-group">
                    آدرس
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    رمز عبور
                    <input type="password" value="******" class="form-control" disabled />
                </div>
                <hr />
                <div class="d-flex justify-content-end mt-2">
                    <button type="submit" class="btn-gradient-yellow text-dark mx-1">ذخیره</button>
                    <a asp-action="Index" class="btn-gradient-gray">بازگشت</a>
                </div>
            </form>
        </div>
    </div>
</div>
