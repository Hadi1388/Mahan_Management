@model IEnumerable<installments_Payment.DataAccessLayer.Entities.Users.Assistant>

@{
    ViewData["Title"] = "لیست دستیار ها";
}


<p>
    <a asp-action="Create" class="bg-gradient-to-r from-green-primary to-green-dark text-white px-4 py-2 rounded-full font-medium hover:opacity-90 transitionn">دستیار جدید</a>
</p>

<hr class="mt-3" />

@if (!Model.Any())
{
    <div class="alert btn-gradient-yellow text-center text-black-50 rounded-2 mt-3">
        دستیاری برای نمایش وجود ندارد
    </div>
}

else
{
    <div class="card mt-3">
        <div class="card-body">
            <table class="table table-bordered table-striped shadow">
                <thead class="table-success">
                    <tr class="text-center">
                        <th>
                            نام
                        </th>
                        <th>
                            کد ملی
                        </th>
                        <th>
                            شماره تلفن
                        </th>
                        <th>
                            تصویر پروفایل
                        </th>
                        <th>
                            آدرس
                        </th>
                        <th>
                            عملیات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NationalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @if (item.ProfileImage?.ToString() == "no-image-jpg")
                                {
                                    <img class="img-thumbnail" src="/img/assistant-profile/no-image.jpg" width="100" height="100" />
                                }

                                else
                                {
                                    <img class="img-thumbnail" src="@item.ProfileImage" width="100" height="100" />
                                }
                            </td>
                            <td>
                                @{
                                    int maxLength = 50;
                                    string fullAddress = item.Address ?? "";
                                    string shortAddress = fullAddress.Length > maxLength
                                    ? fullAddress.Substring(0, maxLength) + "..."
                                    : fullAddress;
                                }
                                @shortAddress
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">ویرایش</a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-primary">جزئیات</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
