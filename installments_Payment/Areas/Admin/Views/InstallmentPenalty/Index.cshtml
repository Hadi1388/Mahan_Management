@using installments_Payment.Core.Extensions
@model installments_Payment.DataAccessLayer.Entities.Installments.InstallmentPenalty

@{
    ViewData["Title"] = "تنظیمات جریمه دیرکرد";
    var latest = ViewBag.Latest as installments_Payment.DataAccessLayer.Entities.Installments.InstallmentPenalty;
    var history = ViewBag.History as List<installments_Payment.DataAccessLayer.Entities.Installments.InstallmentPenalty>;
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">

            @if (latest != null)
            {
                <div class="alert btn-gradient-yellow text-dark rounded-2 mb-3">
                    <strong>درصد جریمه روزانه فعلی:</strong> @latest.DailyPenaltyPercent%
                    <hr />
                    <small>آخرین تغییر: @latest.LastUpdated.ToPersianDate() در ساعت @latest.LastUpdated.ToString("HH:mm")</small>
                </div>
            }
            else
            {
                <p class="alert btn-gradient-red rounded-2">هیچ تنظیمی ثبت نشده اَست.</p>
                <hr />
            }

            <form asp-action="Update" method="post" class="mt-3">
                <div class="mb-3">
                    <label for="dailyPenaltyPercent" class="form-label">درصد جریمه روزانه</label>
                    <input type="number" step="0.01" class="form-control" id="dailyPenaltyPercent" name="dailyPenaltyPercent" required />
                </div>
                <hr />
                <div class="d-flex justify-content-end mt-2">
                    <button type="submit" class="bg-gradient-to-r from-green-primary to-green-dark text-white px-4 py-2 rounded-full font-medium hover:opacity-90 transition">ثبت</button>
                </div>
            </form>
        </div>
    </div>
    <hr class="mt-2" />
    @if (history != null && history.Any())
    {
        <div class="card shadow-sm mt-2">
            <div class="card-header">
                <h5>تاریخچه تغییرات</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="table-success">
                        <tr>
                            <th>درصد جریمه</th>
                            <th>تاریخ و ساعت تغییر</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in history)
                        {
                            <tr>
                                <td>@item.DailyPenaltyPercent%</td>
                                <td>@item.LastUpdated.ToPersianDate() ساعت @item.LastUpdated.ToString("HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>