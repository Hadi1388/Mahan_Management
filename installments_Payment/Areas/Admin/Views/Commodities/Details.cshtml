@model installments_Payment.DataAccessLayer.Entities.Inventories.Commodity

@{
    ViewData["Title"] = "جزئیات کالا";
}

<div class="container">
    <div class="card shadow-sm border-0 p-2">
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>نام کالا</th>
                        <td>@Model.Name</td>
                    </tr>
                </tbody>
            </table>
            <hr class="py-2" />
            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model?.CommodityId" class="btn-gradient-yellow text-dark mx-1">ویرایش</a>
                <a asp-action="Index" class="btn-gradient-gray">بازگشت</a>
            </div>
        </div>
    </div>
</div>
