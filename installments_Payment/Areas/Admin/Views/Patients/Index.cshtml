@model IEnumerable<installments_Payment.DataAccessLayer.Entities.Users.Patient>
@using installments_Payment.Core.Extensions

@{
    ViewData["Title"] = "لیست بیمار ها";
}

<p>
    <a asp-action="Create" class="bg-gradient-to-r from-green-primary to-green-dark text-white px-4 py-2 rounded-full font-medium hover:opacity-90 transitionn">بیمار جدید</a>
</p>

<hr class="mt-3" />

<a class="mt-3 p-2 alert btn-gradient-green text-center rounded-2 w-100 text-center">
    این بخش صرفا برای مدیریت بیماران میباشد؛ برای مدیریت مالی و درمان به قسمت های مربوطه مراجعه کنید
</a>

@if (!Model.Any())
{
    <div class="alert btn-gradient-yellow text-center text-black-50 rounded-2 mt-3">
        بیماری برای نمایش وجود ندارد
